
<div class="body">
<!--   <div class="container"> -->
      <div class="field">
          <h2>User info</h2>
          <%= form_for(@user) do |f| %>
          <label>Name</label>
            <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>Image</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
          <label>Introduction</label>
        <%= f.text_area :introduction %>
      </div>
          <%= f.submit 'Update User' %>
          <% end %>
</div>
<div class="body">
  <div class="container">
    <div class="row">
   <%= render 'users/list', user: current_user, book: @book %>
      <div class="col-xs-9">
    		<h2>Book detail</h2>
    		<table class="table">
    		  <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback:"Noimage.png", size: '40x40' %>
              </td>
              <td>
                 <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
                <td><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %>
              </td>
              <td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn-sm btn-danger" %>
                </td>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
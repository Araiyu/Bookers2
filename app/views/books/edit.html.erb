<div class="body">
      <div class="container">
      	<h2>Editing Book</h2>
          <%= form_for(@book) do |f| %>
            <div class="field">
              <label>Title</label>
                <%= f.text_field :title %>
            </div>
            <div class="field">
              <label for="book_body">Opinion</label>
                <%= f.text_area :body %>
            </div>
              <div class="actions">
                <%= f.submit 'Update Book' %>
              <% end %>
              </div>
              <%= link_to "show", book_path(@book.id) %>
              |
              <%= link_to "back", books_path %>
        </div>
      </div>